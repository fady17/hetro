@using Hetro.Services
@inject ICartService CartService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hetro Clothing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* Optional: Add Bootstrap Icons CSS if you want to use them for cart icon *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/Hetro.styles.css" asp-append-version="true" /> *@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid"> @* Use container-fluid for full width nav *@
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hetro Clothing</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Order" asp-action="MyOrders">My Orders</a> @* Added My Orders link *@
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav"> @* Second ul for right-aligned items *@
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                @{
                                    var cartItemCount = await CartService.GetCartItemCountAsync();
                                }
                                <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index" title="View Cart">
                                    <i class="bi bi-cart3"></i> @* Bootstrap Cart Icon *@
                                    @if (cartItemCount > 0)
                                    {
                                        <span class="badge rounded-pill bg-danger align-text-bottom ms-1">@cartItemCount</span>
                                    }
                                </a>
                            </li>
                        }
                        <partial name="_LoginPartial" /> @* Keep existing login partial *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
 <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Hetro - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


