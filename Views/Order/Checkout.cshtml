@model Hetro.Models.Order
@{ ViewData["Title"] = "Checkout"; }

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="PlaceOrder" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="UserSubjectId" />

                <h4>Shipping Information</h4>
                <div class="mb-3">
                    <label asp-for="ShippingAddress" class="form-label"></label>
                    <textarea asp-for="ShippingAddress" class="form-control" rows="3" placeholder="123 Main St, Anytown, USA"></textarea>
                    <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ContactPhoneNumber" class="form-label"></label>
                    <input asp-for="ContactPhoneNumber" class="form-control" placeholder="555-123-4567" />
                    <span asp-validation-for="ContactPhoneNumber" class="text-danger"></span>
                </div>

                <hr />
                <h4 class="mt-3">Payment Method</h4>
                <p class="text-muted">For now, we'll simulate "Pay on Site". Payment gateway integration (Stripe) will be added later.</p>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="payOnSite" value="PayOnSite" checked disabled>
                    <label class="form-check-label" for="payOnSite">
                        Pay on Site / Cash on Delivery (Simulated)
                    </label>
                </div>

                <button type="submit" class="btn btn-lg btn-primary rally-button-primary w-100">Place Your Order</button>
            </form>
        </div>
        <div class="col-md-4">
            @* TODO: Display order summary from cart here *@
            <h4>Order Summary</h4>
            <p class="text-muted">Your cart items will be listed here.</p>
            <p>Total: [To be calculated]</p>
        </div>
    </div>
</div>