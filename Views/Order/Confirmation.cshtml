@model Hetro.Models.Order
@{ ViewData["Title"] = "Order Confirmation"; }

<div class="container mt-4 text-center">
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Thank You!</h4>
        <p>Your order (#@Model.Id) has been successfully placed.</p>
        <hr>
        <p class="mb-0">We will notify you once it's processed and shipped.</p>
    </div>

    <h5>Order Details:</h5>
    <p><strong>Order Date:</strong> @Model.OrderDateUtc.ToLocalTime()</p>
    <p><strong>Order Total:</strong> @Model.OrderTotal.ToString("C")</p>
    <p><strong>Status:</strong> @Model.OrderStatus</p>
    <p><strong>Shipping To:</strong> @Model.ShippingAddress</p>

    <table class="table table-sm mt-3">
        <thead><tr><th>Item</th><th>Qty</th><th>Price</th><th>Subtotal</th></tr></thead>
        <tbody>
        @foreach(var item in Model.OrderItems)
        {
            <tr><td>@item.ProductName</td><td>@item.Quantity</td><td>@item.UnitPrice.ToString("C")</td><td>@((item.Quantity * item.UnitPrice).ToString("C"))</td></tr>
        }
        </tbody>
    </table>

    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary mt-3">Continue Shopping</a>
</div>