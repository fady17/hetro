@* File: Hetro/Views/Account/Profile.cshtml *@
@{
    ViewData["Title"] = "Your Profile";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-header">
            User Claims
        </div>
        <div class="card-body">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <dl class="row">
                    @foreach (var claim in User.Claims.OrderBy(c => c.Type)) // Order claims for readability
                    {
                        <dt class="col-sm-3 text-muted">@claim.Type</dt>
                        <dd class="col-sm-9">@claim.Value</dd>
                    }
                </dl>
            }
            else
            {
                <p>Not logged in.</p>
            }
        </div>
         <div class="card-footer text-end">
              <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-secondary">Back to Shop</a>
         </div>
    </div>

</div>